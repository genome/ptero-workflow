{
    "tasks": {
        "Inner": {
            "methods": [
                {
                    "name": "some_workflow",
                    "parameters": {
                        "tasks": {
                            "A": {
                                "methods": [
                                    {
                                        "name": "execute",
                                        "service": "shell-command",
                                        "parameters": {
                                            "commandLine": ["./echo_command"],
                                            "user": "{{ user }}",
                                            "workingDirectory": "{{ workingDirectory }}",
                                            "environment": {{ environment }}
                                        }
                                    }
                                ]
                            }
                        },

                        "links": [
                            {
                                "source": "input connector",
                                "destination": "A",
                                "dataFlow": {
                                    "constant_param_in": "constant_param"
                                }
                            },
                            {
                                "source": "A",
                                "destination": "output connector",
                                "dataFlow": {
                                    "constant_param": "constant_param_out"
                                }
                            },

                            {
                                "source": "input connector",
                                "destination": "A",
                                "dataFlow": {
                                    "parallel_param_in": "parallel_param"
                                }
                            },
                            {
                                "source": "A",
                                "destination": "output connector",
                                "dataFlow": {
                                    "parallel_param": "parallel_param_out"
                                }
                            }
                        ]
                    },
                    "service": "workflow"
                }
            ],
            "parallelBy": "parallel_param_in"
        }
    },

    "links": [
        {
            "source": "input connector",
            "destination": "Inner",
            "dataFlow": {
                "in_constant": "constant_param_in"
            }
        },
        {
            "source": "Inner",
            "destination": "output connector",
            "dataFlow": {
                "constant_param_out": "out_constant"
            }
        },

        {
            "source": "input connector",
            "destination": "Inner",
            "dataFlow": {
                "in_parallel": "parallel_param_in"
            }
        },
        {
            "source": "Inner",
            "destination": "output connector",
            "dataFlow": {
                "parallel_param_out": "out_parallel"
            }
        }
    ],

    "inputs": {
        "in_constant": "kittens",
        "in_parallel": ["Simba", "Tabby", "Emilio"]
    }
}
