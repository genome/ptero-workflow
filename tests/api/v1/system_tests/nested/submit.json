{
    "tasks": {
        "A": {
            "methods": [
                {
                    "name": "execute",
                    "service": "shell-command",
                    "parameters": {
                        "commandLine": ["./echo_command"],
                        "user": "{{ user }}",
                        "workingDirectory": "{{ workingDirectory }}",
                        "environment": {{ environment }}
                    }
                }
            ]
        },
        "Inner": {
            "methods": [
                {
                    "name": "some_workflow",
                    "parameters": {
                        "tasks": {
                            "B": {
                                "methods": [
                                    {
                                        "name": "execute",
                                        "service": "shell-command",
                                        "parameters": {
                                            "commandLine": ["./echo_command"],
                                            "user": "{{ user }}",
                                            "workingDirectory": "{{ workingDirectory }}",
                                            "environment": {{ environment }}
                                        }
                                    }
                                ]
                            }
                        },
                        "links": [
                            {
                                "source": "input connector",
                                "destination": "B",
                                "dataFlow": {
                                    "inner_in_b": "param"
                                }
                            },
                            {
                                "source": "B",
                                "destination": "output connector",
                                "dataFlow": {
                                    "param": "inner_out_b"
                                }
                            }
                        ]
                    },
                    "service": "workflow"
                }
            ]
        },
        "C": {
            "methods": [
                {
                    "name": "execute",
                    "service": "shell-command",
                    "parameters": {
                        "commandLine": ["./echo_command"],
                        "user": "{{ user }}",
                        "workingDirectory": "{{ workingDirectory }}",
                        "environment": {{ environment }}
                    }
                }
            ]
        }
    },

    "links": [
        {
            "source": "input connector",
            "destination": "A",
            "dataFlow": {
                "outer_in_a": "param"
            }
        },
        {
            "source": "input connector",
            "destination": "Inner",
            "dataFlow": {
                "outer_in_inner": "inner_in_b"
            }
        },
        {
            "source": "A",
            "destination": "C",
            "dataFlow": {
                "param": "param_1"
            }
        },
        {
            "source": "Inner",
            "destination": "C",
            "dataFlow": {
                "inner_out_b": "param_2"
            }
        },
        {
            "source": "C",
            "destination": "output connector",
            "dataFlow": {
                "param_1": "outer_out_c_1"
            }
        },
        {
            "source": "C",
            "destination": "output connector",
            "dataFlow": {
                "param_2": "outer_out_c_2"
            }
        }
    ],

    "inputs": {
        "outer_in_a": "ferret",
        "outer_in_inner": "badger"
    }
}
